#ifndef RENDERER_H
#define RENDERER_H

#include "camera.h"
#include "shader.h"
#include "texture.h"
#include "vao.h"
#include "vbo.h"
#include "ibo.h"

typedef struct Renderer {
    Camera camera;
    Shader shader;
    VBO vbo;
    VAO vao;
    IBO ibo;
    int vertex_count;
    int index_count;
    Texture texture;
} Renderer;

void renderer_init(Renderer* renderer, const char* vertex_shader_path, const char* fragment_shader_path);
void renderer_render(Renderer* renderer);

#endif // RENDERER_H

